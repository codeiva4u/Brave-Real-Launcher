{
  "name": "brave-real-launcher",
  "version": "1.2.0",
  "description": "Launch Brave Browser with ease from node. Based on chrome-launcher with Brave-specific support.",
  "main": "./dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=12.13.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "test": "test/run-tests.sh",
    "test-formatting": "test/check-formatting.sh",
    "format": "scripts/format.sh",
    "type-check": "tsc --allowJs --checkJs --noEmit --target es2019 *.js",
    "prepublishOnly": "npm run build && npm run test",
    "reset-link": "(yarn unlink || true) && yarn link && yarn --cwd node_modules/lighthouse/ link brave-real-launcher"
  },
  "bin": {
    "print-brave-path": "bin/print-brave-path.cjs"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.4",
    "@types/sinon": "^9.0.1",
    "@types/which": "^3.0.4",
    "clang-format": "^1.0.50",
    "mocha": "^10.2.0",
    "sinon": "^9.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@types/node": "*",
    "escape-string-regexp": "^4.0.0",
    "is-wsl": "^2.2.0",
    "lighthouse-logger": "^2.0.1",
    "which": "^4.0.0"
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/brave-real-launcher.git"
  },
  "author": "Your Name",
  "license": "Apache-2.0",
  "keywords": [
    "brave",
    "browser",
    "launcher",
    "automation",
    "headless",
    "debugging",
    "devtools",
    "chromium"
  ],
  "homepage": "https://github.com/your-username/brave-real-launcher#readme",
  "bugs": {
    "url": "https://github.com/your-username/brave-real-launcher/issues"
  }
}
